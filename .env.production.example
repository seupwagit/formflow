# Exemplo de variáveis de ambiente para PRODUÇÃO (Coolify)
# Copie este arquivo e configure no painel do Coolify

# ============================================
# OBRIGATÓRIO - Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua_chave_anon_aqui
SUPABASE_SERVICE_ROLE_KEY=sua_service_role_key_aqui

# ============================================
# OBRIGATÓRIO - Gemini AI Configuration
# ============================================
GEMINI_API_KEY=sua_gemini_api_key_aqui
NEXT_PUBLIC_GEMINI_API_KEY=sua_gemini_api_key_aqui
GEMINI_MODEL=gemini-2.0-flash-exp
NEXT_PUBLIC_GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================
# OBRIGATÓRIO - Application Configuration
# ============================================
NEXT_PUBLIC_APP_URL=https://seu-dominio.com
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ============================================
# OPCIONAL - File Upload Configuration
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# ============================================
# OPCIONAL - PDF Configuration
# ============================================
PDF_QUALITY=0.9
PDF_SCALE=2.0
PDF_MAX_WIDTH=1200
PDF_MAX_HEIGHT=1600

# ============================================
# OPCIONAL - PDF.js Worker Configuration
# ============================================
NEXT_PUBLIC_PDF_WORKER_LOCAL=/pdf.worker.min.js
NEXT_PUBLIC_PDF_WORKER_FAILOVER=true
NEXT_PUBLIC_PDF_WORKER_TIMEOUT=5000

# ============================================
# OPCIONAL - OCR Configuration
# ============================================
OCR_LANGUAGE=por
OCR_CONFIDENCE_THRESHOLD=0.6
OCR_HYBRID_MODE=true
OCR_MIN_CONFIDENCE=0.7
OCR_RETRY_ATTEMPTS=3

# ============================================
# OPCIONAL - AI Configuration
# ============================================
AI_FIELD_DETECTION_AGGRESSIVE=true

# ============================================
# OPCIONAL - Timeouts (em milissegundos)
# ============================================
CONVERSION_TIMEOUT=30000
OCR_TIMEOUT=60000

# ============================================
# OPCIONAL - Debug e Logs
# ============================================
NEXT_PUBLIC_DEBUG_PDF=false
NEXT_PUBLIC_LOG_LEVEL=info
